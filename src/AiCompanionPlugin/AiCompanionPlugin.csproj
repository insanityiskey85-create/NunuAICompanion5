<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<Nullable>enable</Nullable>
		<LangVersion>latest</LangVersion>
		<ImplicitUsings>enable</ImplicitUsings>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>

		<OutputType>Library</OutputType>
		<Version>1.0.0</Version>
		<DalamudApiLevel>13</DalamudApiLevel>
		<IsPackable>true</IsPackable>
	</PropertyGroup>

	<ItemGroup>
		<!-- Dalamud packager as you already had -->
		<PackageReference Include="DalamudPackager" Version="2.1.10" PrivateAssets="all" />
		<!-- **New**: FFXIV client structs for ExecuteCommandInner / Utf8String / modules -->
		<PackageReference Include="FFXIVClientStructs" Version="9.*" />
	</ItemGroup>
	
	<PropertyGroup>
		<DefineConstants>$(DefineConstants);HAS_CLIENTSTRUCTS</DefineConstants>
	</PropertyGroup>

	<Target Name="CopyDalamudRefs" BeforeTargets="Build">
		<PropertyGroup>
			<DalamudLibPath Condition=" '$(DalamudLibPath)' == '' ">$(AppData)\XIVLauncher\addon\Hooks\dev</DalamudLibPath>
		</PropertyGroup>
	</Target>

	<Import Project="$(DalamudLibPath)\DalamudPackager.targets" Condition="Exists('$(DalamudLibPath)\DalamudPackager.targets')" />
</Project>
