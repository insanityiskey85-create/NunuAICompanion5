<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<Nullable>enable</Nullable>
		<LangVersion>latest</LangVersion>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<ImplicitUsings>enable</ImplicitUsings>
		<OutputType>Library</OutputType>
		<Version>1.0.0.2</Version>
		<Authors>You</Authors>
		<Description>Isolated AI chat companion for Dalamud.</Description>
		<DalamudApiLevel>13</DalamudApiLevel>
		<IsPackable>true</IsPackable>

		<!-- If you ever need to toggle aliases, you can add build symbols here -->
		<!-- <DefineConstants>$(DefineConstants);HAS_DALAMUD_BINDINGS</DefineConstants> -->
	</PropertyGroup>

	<!-- Point at your Hooks dev folder -->
	<PropertyGroup>
		<DalamudLibPath>C:\Users\insan\AppData\Roaming\XIVLauncher\addon\Hooks\dev</DalamudLibPath>
	</PropertyGroup>

	<!-- Explicit refs: Dalamud, Interface, and the REQUIRED Bindings.ImGui -->
	<ItemGroup>
		<Reference Include="Dalamud">
			<HintPath>$(DalamudLibPath)\Dalamud.dll</HintPath>
			<Private>false</Private>
		</Reference>
		<Reference Include="Dalamud.Interface">
			<HintPath>$(DalamudLibPath)\Dalamud.Interface.dll</HintPath>
			<Private>False</Private>
		</Reference>
		<Reference Include="Dalamud.Bindings.ImGui">
			<HintPath>$(DalamudLibPath)\Dalamud.Bindings.ImGui.dll</HintPath>
			<Private>false</Private>
		</Reference>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="DalamudPackager" Version="2.1.10" PrivateAssets="all" />
		<None Include="DalamudPlugin.json" CopyToOutputDirectory="PreserveNewest" Condition="Exists('DalamudPlugin.json')" />
	</ItemGroup>

	<Import Project="$(DalamudLibPath)\DalamudPackager.targets" Condition="Exists('$(DalamudLibPath)\DalamudPackager.targets')" />
</Project>
