<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<!-- Dalamud plugins typically target Windows .NET; adjust if your template differs -->
		<TargetFramework>net9.0-windows</TargetFramework>

		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- Optional quality-of-life flags -->
		<Optimize>true</Optimize>
		<LangVersion>latest</LangVersion>

		<!-- Ensure local copies of referenced assemblies (useful for packaging) -->
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>

		<!-- Generate PDBs for better crash logs -->
		<DebugType>portable</DebugType>
	</PropertyGroup>

	<!-- IMPORTANT:
       Do NOT list <Compile Include="*.cs"> here. The SDK already includes all .cs
       under the project folder. Listing them again causes NETSDK1022. -->

	<!-- Typical Dalamud packaging helper (version may vary in your setup) -->
	<ItemGroup>
		<PackageReference Include="DalamudPackager" Version="2.1.12" PrivateAssets="All" />
	</ItemGroup>

	<!-- Reference Dalamud runtime; path may vary if you use dev/stable channels or a custom build setup.
       Keep whichever block matches your environment; remove the others if unnecessary. -->
	<ItemGroup>
		<Reference Include="Dalamud">
			<HintPath>$(AppData)\XIVLauncher\addon\Hooks\dev\Dalamud.dll</HintPath>
			<Private>false</Private>
		</Reference>
		<Reference Include="Dalamud.Bindings.ImGui">
			<HintPath>$(AppData)\XIVLauncher\addon\Hooks\dev\Dalamud.Bindings.ImGui.dll</HintPath>
			<Private>false</Private>
		</Reference>
		<Reference Include="Newtonsoft.Json">
			<HintPath>$(AppData)\XIVLauncher\addon\Hooks\dev\Newtonsoft.Json.dll</HintPath>
			<Private>false</Private>
		</Reference>
	</ItemGroup>

	<!-- If you use Dalamud’s service interfaces (IChatGui, IFramework, IPluginLog, etc.),
       you usually don’t need extra PackageReferences—just the runtime references above. -->

	<!-- If you previously had explicit Compile items, they should be removed.
       Example of what NOT to include:
       <ItemGroup>
         <Compile Include="ChatPipe.cs" />
         <Compile Include="ChatTwoBridge.cs" />
         ...
       </ItemGroup>
  -->

</Project>
