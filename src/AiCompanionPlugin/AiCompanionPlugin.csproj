<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<Nullable>enable</Nullable>
		<LangVersion>latest</LangVersion>
		<ImplicitUsings>enable</ImplicitUsings>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>

		<!-- Enable native path only when we reference the DLL -->
		<DefineConstants>TRACE;HAS_CLIENTSTRUCTS</DefineConstants>

		<OutputType>Library</OutputType>
		<Description>Isolated AI chat companion for Dalamud.</Description>
		<DalamudApiLevel>13</DalamudApiLevel>
		<IsPackable>true</IsPackable>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="DalamudPackager" Version="2.1.10" PrivateAssets="all" />
	</ItemGroup>

	<!-- Local DLL reference (no NuGet). Do NOT copy to output; Dalamud loads us in-process. -->
	<ItemGroup>
  <!-- Dalamud core -->
  <Reference Include="Dalamud">
    <HintPath>Libs\Dalamud.dll</HintPath>
    <Private>false</Private>
  </Reference>

  <!-- Dalamud UI helpers -->
  <Reference Include="Dalamud.Interface">
    <HintPath>Libs\Dalamud.Interface.dll</HintPath>
    <Private>false</Private>
  </Reference>

  <!-- ImGui binding (namespace is ImGuiNET) -->
  <Reference Include="Dalamud.Bindings.ImGui">
    <HintPath>Libs\Dalamud.Bindings.ImGui.dll</HintPath>
    <Private>false</Private>
  </Reference>

  <!-- FFXIV client structs (native interop types) -->
  <Reference Include="FFXIVClientStructs">
    <HintPath>Libs\FFXIVClientStructs.dll</HintPath>
    <Private>false</Private>
  </Reference>
</ItemGroup>

<Target Name="CopyDalamudRefs" BeforeTargets="Build">
		<PropertyGroup>
			<DalamudLibPath Condition=" '$(DalamudLibPath)' == '' ">$(AppData)\XIVLauncher\addon\Hooks\dev</DalamudLibPath>
		</PropertyGroup>
	</Target>

	<Import Project="$(DalamudLibPath)\DalamudPackager.targets"
			Condition="Exists('$(DalamudLibPath)\DalamudPackager.targets')" />
</Project>
